<Layout title="iMarcos Eventi - Galleria Foto">
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-black/50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">Galleria Fotografica</h1>
      </div>
    </section>

    <!-- Photo Gallery -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {photos.map((photo, index) => (
          <button 
            class="relative group cursor-pointer overflow-hidden rounded-lg w-full h-64"
            data-photo-index={index}
            onclick={`window.openPhotoModal(${index})`}
          >
            <img 
              src={photo.src}
              alt={photo.alt}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-black bg-opacity-20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </button>
        ))}
      </div>
    </section>

    <!-- Modal -->
    <div 
      id="photo-modal"
      class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center"
    >
      <button 
        id="close-modal"
        class="absolute top-4 right-4 text-white hover:text-band-accent"
        aria-label="Chiudi"
        onclick="window.closePhotoModal()"
      >
        <svg 
          class="w-8 h-8" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>

      <button 
        id="prev-photo"
        class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-band-accent"
        aria-label="Foto precedente"
        onclick="window.showPrevPhoto()"
      >
        <svg 
          class="w-8 h-8" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M15 19l-7-7 7-7"
          />
        </svg>
      </button>

      <button 
        id="next-photo"
        class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-band-accent"
        aria-label="Foto successiva"
        onclick="window.showNextPhoto()"
      >
        <svg 
          class="w-8 h-8" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M9 5l7 7-7 7"
          />
        </svg>
      </button>

      <div class="max-w-7xl max-h-[90vh] mx-auto p-4">
        <img 
          id="modal-image"
          src=""
          alt=""
          class="max-w-full max-h-[80vh] object-contain mx-auto"
        />
      </div>
    </div>
  </main>
</Layout>

